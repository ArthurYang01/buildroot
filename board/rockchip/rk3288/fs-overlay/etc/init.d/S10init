#!/bin/sh
#
# Start 3399 linux service....
#

case "$1" in
	start)
		# Mount debugfs
		mount -t debugfs none /sys/kernel/debug

		# bluetooth
		rkbt  /etc/bluetooth/bcm4354a1.hcd /dev/ttyS0 &

		# music
		/usr/bin/audioservice &

		echo performance > /sys/class/devfreq/ffa30000.gpu/governor
		echo performance > /sys/devices/system/cpu/cpu0/cpufreq/scaling_governor

		# create libmali.so link depend on chips type in the runtime
		GPU_VERSION=$(cat /sys/devices/platform/*gpu/gpuinfo)
		cd /usr/lib
		if [[ $GPU_VERSION =~ "Mali-T76x MP4 r1p0 0x0750" ]];
		then
			#rk3288W
			ln -s libmali-midgard-t76x-r14p0-r1p0-wayland.so libmali.so
		else
			#rk3288, rk3288-C, rk3288-CG
			ln -s libmali-midgard-t76x-r14p0-r0p0-wayland.so libmali.so
		fi
		cd -

		# ueventd
		/usr/bin/ueventd &

		sleep 5   #wait for ueventd finish scan and create mount point
                mount -a

		#ln -s /dev/block/platform/fe330000.sdhci/by-name/misc /misc
		#Resize oem, rootfs partition to fit available disk space
		#resize2fs /dev/block/platform/fe330000.sdhci/by-name/oem
		#resize2fs /dev/block/platform/fe330000.sdhci/by-name/rootfs

		#Resize userdata partition to fit available disk space
		#resize2fs /dev/block/platform/fe330000.sdhci/by-name/userdata
		;;
	stop)
		printf "stop finished"
        ;;
	*)
        echo "Usage: $0 {start|stop}"
        exit 1
        ;;
esac
exit 0

